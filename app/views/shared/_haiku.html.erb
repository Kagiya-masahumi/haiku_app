<% if haiku.season_id == 1 %>
  <li class="list content-hover spring_card_background">
<% elsif haiku.season_id == 2 %>
  <li class="list content-hover summer_card_background">
<% elsif haiku.season_id == 3 %>
  <li class="list content-hover autumn_card_background">
<% else %>
  <li class="list content-hover winter_card_background">
<% end %>
  <%= haiku.id %>
  <div class="card_kami">
    <%= haiku.kami %>
  </div>
  <div class="card_naka">
    <%= haiku.naka %>
  </div>
  <div class="card_shimo">
    <%= haiku.shimo %>
  </div>
  <div class="card_name">
    <% if haiku.user_id.nil? %>
      読み人知らず
    <% else %>
      <%= haiku.user.name %>
    <% end %>
  </div>
  <div class="card_success">
    いいね
  </div>
  <%= hidden_field_tag :season_id, haiku.season_id, id: "season_id" %>
</li>
